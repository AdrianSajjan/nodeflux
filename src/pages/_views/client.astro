---
import { MarqueeBrands } from "@/pages/_components/marquee-brands";
---

<section id="client" class="pt-12 sm:pt-12 group" data-state="invisible">
  <div class="container flex flex-col gap-10">
    <p class="group-data-[state=visible]:animate-slide-in opacity-0 text-center text-lg"><strong>Over 18+ brands</strong> have experienced remarkable new user growth with NodeFlux</p>
    <div class="group-data-[state=visible]:animate-slide-in opacity-0 [--slide-in-delay:150ms] hidden">
      <MarqueeBrands client:load />
    </div>
  </div>
</section>

<script>
  const element = document.getElementById("client")!;
  const observer = new IntersectionObserver(
    ([entry]) => {
      if (entry.isIntersecting) {
        element.dataset.state = "visible";
        observer.unobserve(element);
      }
    },
    { threshold: 0.25 }
  );
  observer.observe(element);
</script>
